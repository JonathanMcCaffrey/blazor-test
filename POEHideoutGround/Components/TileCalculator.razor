@inherits TileCalculatorBase


<div style="border-width:thick;border-style:solid;border-color:gray;border-radius:10px;padding:30px;width:100%">

    <div class="form-group">
        <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="ground" checked @onchange="eventArgs => { Toggle(eventArgs.Value); }" />
            <label class="custom-control-label" for="ground">Enable ground tiles.</label>
        </div>

        <div class="form-group row">
            <label for="ground">Ground Choice</label>
            <select disabled="@IsDisabled" class="form-control" @bind="@SelectedKey">

                @if (TileData != null)
                {
                    @foreach (var tile in TileData)
                    {
                        if (DefaultTileData.Hash == tile.Hash && DefaultTileData.Var == tile.Var)
                        {
                            <option value="@tile.Key" selected>@tile.Name @tile.DisplayVar - Default</option>
                        }
                        else
                        {
                            <option value="@tile.Key">@tile.Name @tile.DisplayVar</option>
                        }
                    }
                }
            </select>
        </div>
    </div>

</div>